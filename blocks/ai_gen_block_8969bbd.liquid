{% doc %}
  @prompt
    I need a text block that lets me fully control the typography.
    Please generate a Shopify block where I can customize:
    
    Font size
    
    Font weight (regular / medium / bold)
    
    Line height
    
    Text alignment (left / center / right)
    
    Text color
    
    Optional manual line breaks (using newline_to_br)
    
    Optional custom break marker that I can insert in the text to force a new line
    
    The block should render the text exactly as I type it, respecting line breaks when enabled, and must generate clean Liquid + CSS.
    Make it responsive and easy to style.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-custom-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: {{ block.settings.line_height }};
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    margin: 0;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  @media screen and (max-width: 749px) {
    .ai-custom-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-custom-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% liquid
    assign text_content = block.settings.text

    if block.settings.enable_line_breaks
      if block.settings.custom_break_marker != blank
        assign text_content = text_content | replace: block.settings.custom_break_marker, '<br>'
      endif
      assign text_content = text_content | newline_to_br
    endif

    echo text_content
  %}
</div>

{% schema %}
{
  "name": "Custom text",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Add your custom text here"
    },
    {
      "type": "checkbox",
      "id": "enable_line_breaks",
      "label": "Enable line breaks",
      "default": false,
      "info": "Converts line breaks in the text to HTML breaks"
    },
    {
      "type": "text",
      "id": "custom_break_marker",
      "label": "Custom break marker",
      "info": "Optional: Enter a custom marker (e.g., ||) to force line breaks"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "range",
      "id": "font_size_mobile",
      "min": 10,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Font size (mobile)",
      "default": 14
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Regular"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "range",
      "id": "line_height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "label": "Line height",
      "default": 1.5
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Custom text"
    }
  ]
}
{% endschema %}
